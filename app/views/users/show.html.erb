<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-9">
        <div class="infos">
          <div class="info text-center">
            <div class="item">
              <%= image_tag 'http://via.placeholder.com/100x100', class: "avatar avatar-large img-thumbnail img-responsive" %>
            </div>
            <div class="item">
              <h3><%= @resume.user.first_name %> <%= @resume.user.last_name %></h3>
              <h4><%= @resume.university.name %></h4>
              <div class="stars">
                <% if @avg_rating >= 1 && @avg_rating < 1.5 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                <% elsif @avg_rating >= 1.5 && @avg_rating < 2 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star-half" aria-hidden="true"></i></h5>
                <% elsif @avg_rating >= 2 && @avg_rating < 2.5 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star-half" aria-hidden="true"></i></h5>
                <% elsif @avg_rating >= 3 && @avg_rating < 3.5 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star-half" aria-hidden="true"></i></h5>
                <% elsif @avg_rating >= 4 && @avg_rating < 4.5 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star-half" aria-hidden="true"></i></h5>
                <% elsif @avg_rating >= 4.5 && @avg_rating < 5 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star-half" aria-hidden="true"></i></h5>
                <% elsif @avg_rating == 5 %>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                  <h5><i class="fa fa-star" aria-hidden="true"></i></h5>
                <% else %>
                  <h5 style="color: rgba(41,41,41,0.7)"><i class="fa fa-star" aria-hidden="true"></i></h5>
                <% end %>
              </div>
              <h5 class="text-right"><span><%= @meetings.count %> Conversas</span></h5>
            </div>
          </div>
          <div class="info text-center">
            <div class="item">
              <h4>Porcentagem completa do curso:</h4>
              <div class="progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= @resume.relative_completion %>%;">
                  <p><%= @resume.relative_completion %>%</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-3">

      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-9">
        <div class="info text-center">
          <div class="item">
            <h3>Sobre mim</h3>
            <p><%= @resume.academic_description %></p>
            <div class="row">
              <div class="col-xs-6 col-xs-offset-3">
                <div class="opinion">
                  <p>Minha opni√£o sobre o curso:</p>
                  <% if @resume.stance.to_i > 1 %>
                    <a style="cursor: pointer;"><i class="fa fa-thumbs-up fa"></i></a>
                  <% elsif @resume.stance.to_i == 1 %>
                    <p><i class="fa fa-question-circle" aria-hidden="true"></i></p>
                  <% else %>
                    <a style="cursor: pointer;"><i class="fa fa-thumbs-down fa"></i></a>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-9">
        <div class="review-row">
          <% if @count_reviews == 1 %>
            <h3 class="text-center"><%= @count_reviews %> Review</h3>
          <% elsif @count_reviews > 1 || @count_reviews == 0 %>
            <h3 class="text-center"><%= @count_reviews %> Reviews</h3>
          <% end %>
        </div>
      </div>
      <% @meetings.each do |meeting| %>
        <div class="col-xs-12 col-sm-9">
          <% if !meeting.review_title.nil? && !meeting.review_content.nil?  %>
            <div class="item">
              <h4><%= meeting.review_title %></h4>
              <p><%= meeting.review_content %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
