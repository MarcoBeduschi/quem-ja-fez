<!-- Changes navbar ONLY for index page -->
<% content_for(:navbar_class, "navbar-home") %>

<!-- Changes alert message for index page -->
<% content_for(:alert_class, "alert-home") %>

<!-- Search Bar -->
<div class="banner banner-sm" style="background-image: url(<%= image_path 'landing_page.jpg' %>);">
  <%= render '/shared/banner_form' %>
</div>

<!-- Body -->
<div class="container margin-v-md">
  <!-- If there's some result -->
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <p class="pull-right"><%= @resumes.size %> <%= result_search(params, @resumes) %></p>
    </div>
  </div>
    <!-- Search Results if there's some resume-->
    <% @resumes.each do |resume| %>
      <% @meetings = Meeting.where(undergraduate_id: resume.user.id)  %>
      <% @count = 0 %>
      <% @count_reviews = 0 %>
      <% @meetings.each { |meeting| @count += meeting.rating if !meeting.rating.nil? } %>
      <% @meetings.each { |meeting| @count_reviews += 1 if !meeting.review_title.nil? } %>
      <% @avg_rating = (@count.to_f / @meetings.size).round(1) unless @meetings.size == 0 %>
      <div class="col-sm-12">
        <div class="row undergrad-card">
          <p><%= resume.id %></p>
          <%= link_to "", user_path(resume), class: 'card-link'%>

          <div class="col-xs-4 content text-center">
            <div class="row">
              <%= image_tag user_photo_index(resume), class: "img-thumbnail img-responsive img-circle" %>
            </div>
            <div class="row">
              <h4><%= resume.user.first_name %> <%= resume.user.last_name %><%= ", #{age_calculator(resume.user)}" %></h4>
            </div>
            <div class="row">
              <%= render '/shared/users/avg' %>
            </div>
            <div class="row">
              <p><strong><%= @avg_rating %></strong> - <%= @count_reviews %> anÃ¡lises</p>
            </div>
          </div>

          <div class="col-xs-4 text-center content right-column">
            <h3 class="user-name">
              <% if resume.stance %>
              <a class="btn btn-md btn-success" style="cursor: pointer; margin-right: 25px;">
                <i class="fa fa-thumbs-up"></i></a></a><%= resume.course.name %>
              <% else %>
                <a class="btn btn-md btn-danger" style="cursor: pointer; margin-right: 25px;">
                <i class="fa fa-thumbs-down"></i></a></a><%= resume.course.name %>
              <% end %>
            </h3>
            <h6><%= resume.university.name %></h6>
            <div class="progress" style="width: 70%; margin: 3px auto;">
              <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= resume.relative_completion %>%;">
                <p><%= resume.relative_completion %>%</p>
              </div>
            </div>
          </div>


          <div class="col-xs-4">
            <h6 class="user-description"><%= resume.user.personal_description %></h6>
          </div>
        </div>
      </div> <!-- end: ~> col-sm-10 -->
    <% end %> <!-- end: ~> @resumes iterator-->
</div> <!-- end: ~> Body  -->
