<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- Logo -->
  <%= link_to root_path, class: "logo-container" do %>
    <div class="logo">
      <h4>Quem já fez?</h4>
    </div>
    <div class="logo-beta-keyword">
      <small>beta</small>
    </div>
  <% end %>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if current_user.undergraduate == false  %>
        <%= link_to "Cadastrar-se como Universitário", info_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

        <div id="navbar-wagon-menu", data-toggle="dropdown">
          <%= display_user_avatar(current_user, size: 'xs', css_class: "dropdown-toggle") %>
        </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to(edit_profile_info_path) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Links when logged out -->
      <%= link_to "Cadastrar-se como Universitário", info_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Cadastrar-se como Vestibulando", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
       <!-- TO-DO: fazer os ifs para universitários e vestibulando  -->
        <li>
          <%= link_to(info_path) do %>
            <!-- <i class="fa fa-graduation-cap"></i> -->  <%= t(".profile", default: "Cadastrar-se como Universitário") %>
          <% end %>
        </li>
        <li>
          <%= link_to(new_user_registration_path) do %>
            <!-- <i class="fa fa-user-plus"></i> -->  <%= t(".profile", default: "Cadastrar-se como Vestibulando") %>
          <% end %>
        </li>
        <li>
          <%= link_to(new_user_session_path) do %>
            <!-- <i class="fa fa-level-up"></i> -->  <%= t(".profile", default: "Entrar") %>
          <% end %>
        </li>
        <li>
          <%= link_to root_path do %>
            <!-- <i class="fa fa-home"></i> -->  <%= t(".profile", default: "Home") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
