<% if @avg_rating.present? && @avg_rating.nil? == false %>
  <% if @avg_rating >= 1 && @avg_rating < 1.5 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
  <% elsif @avg_rating >= 1.5 && @avg_rating < 2 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star-half" aria-hidden="true"></i></span>
  <% elsif @avg_rating >= 2 && @avg_rating < 2.5 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star-half" aria-hidden="true"></i></span>
  <% elsif @avg_rating >= 3 && @avg_rating < 3.5 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star-half" aria-hidden="true"></i></span>
  <% elsif @avg_rating >= 4 && @avg_rating < 4.5 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star-half" aria-hidden="true"></i></span>
  <% elsif @avg_rating >= 4.5 && @avg_rating < 5 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star-half" aria-hidden="true"></i></span>
  <% elsif @avg_rating == 5 %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
  <% end %>
<% else %>
  <span style="color: rgba(41,41,41,0.7)"><i class="fa fa-star" aria-hidden="true"></i></span>
<% end %>
