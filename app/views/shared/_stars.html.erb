<% i = 1 %>
<% while i <= 5 do %>
  <% if (i <= avg_rating) && avg_rating.present? %>
    <% if avg_rating - i == 0.5 %>
      <i class="fa fa-star " aria-hidden="true"></i>
      <i class="fa fa-star-half-o" aria-hidden="true"></i>
      <% i = i + 2 %>
    <% else %>
      <i class="fa fa-star" aria-hidden="true"></i>
      <% i = i + 1 %>
    <% end %>
  <% else %>
    <i class="fa fa-star empty-star" aria-hidden="true"></i>
    <% i = i + 1 %>
  <% end %>
<% end %>


