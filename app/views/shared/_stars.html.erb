
<% for i in 1..5 %>
  <% if (i <= avg_rating) && avg_rating.present? %>
    <% if avg_rating - i == 0.5 %>
      <i class="fa fa-star " aria-hidden="true"></i>
      <i class="fa fa-star-half" aria-hidden="true"></i>
      <% binding.pry %>
      <% i = i + 1 %>
    <% else %>
      <i class="fa fa-star" aria-hidden="true"></i>
    <% end %>
  <% else %>
    <i class="fa fa-star empty-star" aria-hidden="true"></i>
  <% end %>
<% end %>
