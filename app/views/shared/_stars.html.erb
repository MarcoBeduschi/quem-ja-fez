<% i = 1 %>
<% while i <= 5 do %>
  <% if avg_rating.present? && (i <= avg_rating) %>
    <% if avg_rating - i == 0.5 %>
      <i class="fa fa-star " aria-hidden="true"></i>
      <span class="fa-stack">
        <i class="fa fa-star empty-star fa-stack-1x" aria-hidden="true"></i>
        <i class="fa fa-star-half-o fa-stack-1x" aria-hidden="true"></i>
      </span>
      <% i = i + 2 %>
    <% else %>
      <i class="fa fa-star" aria-hidden="true"></i>
      <% i = i + 1 %>
    <% end %>
  <% else %>
    <i class="fa fa-star empty-star" aria-hidden="true"></i>
    <% i = i + 1 %>
  <% end %>
<% end %>


