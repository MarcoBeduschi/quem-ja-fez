    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <!-- Google fonts -->
    <!-- <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans:300,400|Pacifico" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css?family=Didact+Gothic|Pacifico|Titillium+Web:300,400" rel="stylesheet">
